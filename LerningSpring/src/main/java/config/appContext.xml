<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <bean id = "point1" class="beans.Point">
        <constructor-arg name="x" value="10"/>
        <constructor-arg name="y" value="20" />
    </bean>

    <bean id = "circle" class="beans.Circle">
        <constructor-arg name="radius" value="10" />
        <constructor-arg name="center" ref="point1" />
    </bean>

</beans>